<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:gravity="center"
              tools:context="com.example.kanjuice.RegisterActivity"
              android:padding="25dp">

    <EditText
        android:id="@+id/empId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:padding="10dp"
        android:inputType="numberDecimal"
        android:maxLength="5"
        android:hint="@string/enter_emp_id_here"/>


    <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:padding="10dp"
        android:hint="@string/enter_name_here"/>

    <LinearLayout
        android:id="@+id/action_button_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:paddingTop="25dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cancel"
            android:layout_width="@dimen/default_icons_size"
            android:layout_height="@dimen/default_icons_size"
            android:background="@drawable/button_circle_background"
            android:gravity="center"
            android:scaleType="center"
            android:src="@drawable/ic_close_white"
            />

        <ImageView
            android:id="@+id/save"
            android:layout_width="@dimen/default_icons_size"
            android:layout_height="@dimen/default_icons_size"
            android:background="@drawable/button_circle_background"
            android:gravity="center"
            android:scaleType="center"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_chevron_right_white"/>

    </LinearLayout>

</LinearLayout>
